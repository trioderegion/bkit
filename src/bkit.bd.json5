{
  "version": "2.1.1",
  "title": "Badger Kit: Content Creation Toolkit",
  "description": "By badgers; for badgers.",
  "projectUrl": "https://github.com/trioderegion/bkit",
  "entryPoints": {
    "main": "index.mjs",
    "external": [
      "./common/lib/index.js", "./systems/**/index.js", "common/lib/abstract/*.mjs"
    ]
  },
  "profile": {
    "dev": {
      "dest": "../build",
      "compress": false,
      "sourcemaps": true,
      "clean": false,
      "hmr": true,
      "entryPoints": {
        "compendia": {
          "path": "packs/*/",
          "type": {
            "utility-macros": "Macro"
          },
          "label": {
            "utility-macros": "Utility macros"
          },
          "folder": {
            "label": "Badger Kit",
            "color": "#aa0033"
          }
        }
      }
    },
    "portable": {
      "dest": "../portable",
      "compress": true,
      "sourcemaps": true,
      "clean": true,
      "hmr": true,
      "package": {
        "create": true
      }
    },
    release: {
      dest: "../dist",
      compress: true,
      sourcemaps: true,
      clean: true,
      package: {
        create: true,
        manifest: "%projectUrl%/releases/latest/download/module.json",
        download: "%projectUrl%/releases/download/%version%/%package.name%.zip"
      }
    }
  },
  package: {
    "name":"%config.id%-%config.version%",
  },
  "dependencies": {
    "core": [
      "13",
      "13"
    ]
  },
  "storage": false,
  "static": [],
  "authors": [
    {
      "name": "trioderegion",
      "url": "https://www.github.com/trioderegion"
    }
  ]
}
